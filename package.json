{
  "name": "henkebyte-website",
  "version": "1.0.0",
  "private": true,
  "description": "A showcase website for different open source web projects including an iOS-Calculator and Minesweeper.",
  "license": "MIT",
  "author": "Manuel Henke",
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build && nuxt generate",
    "build-analyze": "nuxt build --analyze",
    "start": "nuxt start",
    "lint": "yarn lint:js && yarn lint:style && yarn lint:prettier",
    "lint:js": "eslint --ext \".js,.vue\" --ignore-path .gitignore .",
    "lint:prettier": "prettier --check .",
    "lint:style": "stylelint \"**/*.{css,scss,sass,html,vue}\" --ignore-path .gitignore",
    "lintfix": "prettier --write --list-different --ignore-path .gitignore . && yarn lint:js --fix && yarn lint:style --fix",
    "prepare": "husky install",
    "test": "jest --passWithNoTests",
    "generate-preview-screenshot": "node ./generate-preview-image.js"
  },
  "dependencies": {
    "@nuxt/content": "^1.15.1",
    "@nuxtjs/axios": "^5.13.6",
    "@nuxtjs/color-mode": "^2.1.1",
    "@nuxtjs/device": "^2.1.0",
    "@nuxtjs/pwa": "^3.3.5",
    "@popperjs/core": "^2.11.4",
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.8.1",
    "chart.js": "^3.7.1",
    "contentful": "^9.1.24",
    "dexie": "^3.2.1",
    "fireworks-js": "^1.3.5",
    "ios-calculator-for-web": "^1.2.4",
    "masonry-layout": "^4.2.2",
    "minesweeper-for-web": "^2.1.6",
    "nuxt": "^2.15.8"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/eslint-parser": "^7.16.3",
    "@babel/preset-env": "^7.16.11",
    "@nuxt/test-utils": "^0.2.2",
    "@nuxtjs/dotenv": "^1.4.1",
    "@nuxtjs/eslint-config": "^9.0.0",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@nuxtjs/robots": "^2.5.0",
    "@nuxtjs/sitemap": "^2.4.0",
    "@nuxtjs/stylelint-module": "^4.1.0",
    "babel-jest": "^27.5.1",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-nuxt": "^3.2.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "playwright": "^1.20.0",
    "postcss-html": "^1.3.0",
    "prettier": "^2.5.1",
    "sass": "^1.49.9",
    "sass-loader": "^10.2.1",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-vue": "^1.1.0",
    "stylelint-config-standard": "^25.0.0"
  }
}
